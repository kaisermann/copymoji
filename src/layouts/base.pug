doctype html
html(lang='en')
  head
    link(rel='preload', href=self.asset('style.css') as='style')

    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content=self.description)
    meta(name="theme-color" content="#000")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="mobile-web-app-capable" content="yes")

    meta(name='web_author', content='Christian Kaisermann <christian@kaisermann.me>')
    meta(property='og:locale', content='en_US')
    meta(property='og:type', content='website')
    meta(property='og:title', content=self.title)
    meta(property='og:description', content=self.description)
    meta(property='og:url', content='http://localhost:3000')
    meta(property='og:site_name', content=self.title)
    meta(property='og:image', content=self.asset('favicon.ico'))

    link(rel='manifest', href=self.asset('manifest.json'))
    link(rel='shortcut icon', href=self.asset('favicon.ico'))

    link(rel='stylesheet', href=self.asset('style.css'))

    title #{self.title}

    script(async src="https://www.googletagmanager.com/gtag/js?id=UA-142129878-1")

    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-75837777-4');

  body
    block content

    script(src='https://signature.kaisermann.me', data-style='position: fixed; right: 0; background: #fff; color: #000;', async)
    script(type="text/javascript" src=self.asset('bundle.js') async)
